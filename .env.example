# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/trello_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
# Use '*' to allow all origins (development)
# Use specific URL for production (e.g., 'https://yourfrontend.com')
# Use multiple origins separated by comma (e.g., 'http://localhost:5173,https://yourfrontend.com')
CORS_ORIGIN=*

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/v1/auth/github/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Email Configuration (for email verification)
# Using SendGrid for reliable email delivery
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_USER=your_verified_sender_email@example.com
EMAIL_FROM_NAME=Task Flow

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
